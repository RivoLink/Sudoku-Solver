<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid
				android:color="@color/primary_light" />
			<stroke
				android:width="1dp"
				android:color="#fff" />
			<corners
				android:radius="3dp" />
		</shape>
	</item>
	<item>
		<shape>
			<solid
				android:color="@color/primary" />
			<stroke
				android:width="1dp"
				android:color="#fff" />
			<corners
				android:radius="2dp" />
		</shape>
	</item>
</selector>
